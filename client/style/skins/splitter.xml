<a:skin xmlns:a="http://ajax.org/2005/aml"><a:splitter name="splitter">
        <a:style><![CDATA[
            .splitter {
                zIndex     : 100;
                overflow   : hidden;
                background : url(images/spacer.gif);
                padding    : 1px;
                position   : relative;
            }
            
            .thin_splitter .splitter{
                border-top : 1px solid #8c8c8c;
                background : #3e3e3e;
            }

            .packager .splitter {
                background-color : #dddddd;
                margin-top       : 1px;
            }

            .splitterFocus {
                border  : 1px dotted black;
                padding : 0;
            }

            .w-resize {
                cursor : w-resize;
            }

            .n-resize {
                cursor : n-resize;
            }

            .splitterMoving {
                background-color : gray;
            }

            .splitterRealtime{
                background : url(images/spacer.gif);
            }

