<a:skin xmlns:a="http://ajax.org/2005/aml">
    <a:splitter name="splitter">
        <a:style><![CDATA[
            .splitter {
                position : relative;
                display  : -moz-box;
                display  : -webkit-box;
                display  : -ms-box;
                z-index  : 1000000;
            }
            
            .splitterFocus {
            }

            .w-resize {
                cursor : ew-resize;
            }

            .n-resize {
                cursor : ns-resize;
            }

            .splitterMoving {
                background-color : gray;
            }

            .splitterRealtime{
                background : url(images/spacer.gif);
            }
            
            .splitter.vertical div{
                width : 5px;
                margin-left : -3px;
                background : url(images/spacer.gif);
            }
            
            .splitter.horizontal div{
                height : 5px;
                margin-top : -3px;
                background : url(images/spacer.gif);
            }
        ]]></a:style>

        <a:presentation>
            <a:main handle=".">
                <div class="splitter">
                    <div> </div>
                </div>
            </a:main>
        </a:presentation>
    </a:splitter>
</a:skin>