<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:skin id="quicksearch" 
      src       = "{require('ext/gotoline/gotoline').skin}" 
      icon-path = "ext/gotoline/icons" />

    <a:bar id="winQuickSearch"
      skin    = "basic"
      skinset = "quicksearch"
      width   = "350"
      kbclose = "true"
      top     = "5"
      right   = "30">
        <a:hbox edge="0 5 5 5">
            <a:textbox id="txtQuickSearch" flex="1" focusselect="true" />
            <a:button onclick="require('ext/quicksearch/quicksearch').find(null, true)" skin="btnIconWithBg" class="btnIconWithBgLeft withDivider" icon="arrow_left_search.png">Left</a:button>
            <a:button onclick="require('ext/quicksearch/quicksearch').find()" skin="btnIconWithBg" class="btnIconWithBgRight" icon="arrow_right_search.png">Right</a:button>
            <a:button margin="0 0 0 10" skin="btnIcon" icon="rounded_plus.png" onclick="
              require('ext/searchreplace/searchreplace').toggleDialog(false, true);
            ">Advanced</a:button>
        </a:hbox>
    </a:bar>
</a:application>