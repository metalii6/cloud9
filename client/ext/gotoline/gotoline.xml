<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window title="Go to Line" buttons="close" id="winGotoLine" modal="false" center="true" width="300" height="200">
        <a:vbox edge="10" padding="4 0 4 0">
            <a:hbox>
                <a:label width="70">Line number</a:label>
                <a:textbox flex="1" mask="99999;;_" />
            </a:hbox>
            <a:divider />
            <a:hbox>
                <a:button>Close</a:button>
                <a:button>Go</a:button>
            </a:hbox>
        </a:vbox>
    </a:window>
</a:application>