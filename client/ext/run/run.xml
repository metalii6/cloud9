<a:application xmlns:a="http://ajax.org/2005/aml">

    <a:model id="mdlRunConfigurations">
        <configurations />
    </a:model>

    <a:window id="winRunCfgNew" 
      title="New Run Configuration" 
      buttons="close" 
      modal="false" 
      center="true" 
      width="350" 
      kbclose="true">
        <a:hbox align="center">
            <a:label width="75">Name</a:label>
            <a:textbox id="txtRunCfgName" flex="1" focusselect="true"/>
        </a:hbox>
        <a:divider />
        <a:hbox align="center">
            <a:label width="75">Name</a:label>
            <a:textbox id="txtRunCfgName" flex="1" focusselect="true"/>
        </a:hbox>
        <a:hbox align="center">
            <a:label width="75">Name</a:label>
            <a:textbox id="txtRunCfgName" flex="1" focusselect="true"/>
        </a:hbox>
            <a:label width="75">Name</a:label>
            <a:textbox id="txtRunCfgName" flex="1" focusselect="true"/>
        </a:hbox>
        <a:divider />
        <a:hbox padding="5" pack="end" edge="10 10 5 10">
            <a:button id="btnFind" default="2" class="ui-btn-green">Run</a:button>
            <a:button onclick="winRunCfgNew.hide()">Cancel</a:button>
        </a:hbox>        
    </a:window>
        
    <a:toolbar id="tbRun">
    <a:divider />
       <!--a:button
      icon="chromium_16.png"
      caption="Debug Chrome"
      onclick="require('ext/run/run').debugChrome()"
      disabled="{stConnected.active}" /-->      
    <a:button
      icon="debugger/ldebug_obj{this.disabled ? '_disabled' : ''}.gif"
      caption="debug"
      onclick="require('ext/run/run').debug()"
      disabled="{stProcessRunning.active}"
    />
    <a:button
      icon="debugger/run_tool{this.disabled ? '_disabled' : ''}.gif"
      caption="run"
      onclick="require('ext/run/run').run()"
      disabled="{stProcessRunning.active}"
    />
    <a:button
      icon="debugger/terminate_co{this.disabled ? '_disabled' : ''}.gif"
      caption="stop"
      onclick="require('ext/run/run').stop()"
      disabled="{!stProcessRunning.active}"
    />
  </a:toolbar>

</a:application>