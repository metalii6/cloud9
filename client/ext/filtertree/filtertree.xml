<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:model id="mdlFileFilter" />
    <a:hbox id="hbFileFilter" visible="false" edge="4">
        <a:textbox id="txtFileFilter" flex="1" realtime="true" />
        <a:button submenu="mnuFileFilterOptions" />
        
        <a:menu id="mnuFileFilterOptions">
            <a:item type="radio" selected="true">By Name</a:item>
            <a:item type="radio">By Content</a:item>
            <a:divider />
            <a:item type="check">Case Insensitive</a:item>
            <a:item type="check">RegExp (Perl)</a:item>
        </a:menu>
    </a:hbox>
    <a:datagrid id="dgFileFilter"
      visible = "false"
      anchors = "34 0 0 0" 
      border  = "1 0 0 0"
      class   = "searchresults"
      model   = "mdlFileFilter"
      loading-message = "Searching Project"
      empty-message   = "No search results"
      startcollapsed  = "false"
      each    = "[d:response]">
        <a:column width="100" value="{apf.getFilename([@path])}" caption="Name" /> 
        <a:column width="100%" caption="Path"><?lm
            if (localName() == "response") {
                [@path]
            }
            else {
                <span class="line">[@line]</span>
                <pre>{[text()].replace([/node()/@query], "<strong>" + [/node()/@query] + "</strong>")}</pre>
            }
        ?></a:column>
    </a:datagrid>
</a:application>