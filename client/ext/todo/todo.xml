<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "winTodo"
      title     = "Tasks"
      center    = "false"
      modal     = "false"
      draggable = "false"
      visible   = "false"
      width     = "260"
      right     = "42"
      skin      = "todowin">
        <a:toolbar height="27">
            <a:bar>
                <a:button
                  icon    = "debugger/monitorexpression_tsk{this.disabled ? '_disabled' : ''}.gif"
                  onclick = "require('c9/ext/todo/todo').expandNewTodo(this);"
                  right   = "35"
                />
                <a:divider 
                  right   = "33"
                />
                <a:button
                  icon    = "arrow_refresh.png"
                  onclick = "require('c9/ext/todo/todo').refreshList();"
                  right   = "0"
                />
            </a:bar>
        </a:toolbar>
        <a:panel 
          skin      = "todopanel"
          visible   = "true"
        >
            <a:panel id="panelAddNewTodo" class="top_border" height="0" width="100%">
                <a:label for="txtTodoTitle">Description</a:label>
                <a:textbox id="txtTodoTitle" focusselect="true" width="238" />
                <a:label for="hboxDateFrom">From</a:label>
                <a:hbox id="hboxDateFrom" width="100%">
                    <a:caldropdown
                      id            = "calTodoFrom"
                      output-format = "mm-dd-yyyy"
                      default       = "today"
                      width         = "150"
                      height        = "19"
                    />
                    <a:dropdown 
                      id            = "timeTodoFrom"
                      model         = "/static/c9/ext/todo/time.xml"
                      each          = "[item]"
                      caption       = "[@value]"
                      width         = "80"
                      onafterchange = "require('c9/ext/todo/todo').setTimeTo();"
                    />
                </a:hbox>
                <a:label for="hboxDateTo">To</a:label>
                <a:hbox id="hboxDateTo" width="100%">
                    <a:caldropdown
                      id            = "calTodoTo"
                      output-format = "mm-dd-yyyy"
                      default       = "today"
                      width         = "150"
                      height        = "19"
                    />
                    <a:dropdown 
                      id            = "timeTodoTo"
                      model         = "/static/c9/ext/todo/time.xml"
                      each          = "[item]"
                      caption       = "[@value]"
                      width         = "80"
                      onafterchange = "require('c9/ext/todo/todo').manualSetTimeTo();"
                    />
                </a:hbox>
                <a:button
                    caption = "Add"
                    width   = "50"
                    top     = "130"
                    right   = "85"
                    onclick = "require('c9/ext/todo/todo').addNewTodo(this);"
                />
                <a:button
                    caption = "Cancel"
                    width   = "70"
                    top     = "130"
                    right   = "5"
                    onclick = "require('c9/ext/todo/todo').cancelAddNewTodo();"
                />
            </a:panel>
            <a:panel
              class = "top_border"
              skin  = "todopanel"
            >
                <a:list
                  multiselect = "false"
                  width       = "100%"
                  height      = "255"
                  skin        = "todolist"
                >
                    <a:item>Go to the store</a:item>
                    <a:item>Gotta get this finished</a:item>
                </a:list>
            </a:panel>
        </a:panel>
    </a:window>
</a:application>