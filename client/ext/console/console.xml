<a:application xmlns:a="http://ajax.org/2005/aml">
    <div id="barConsoleHints" class="barConsoleHints"/>

    <a:window id="winDbgConsole" skin="dockwin" class="nocorners" title="Console" modal="false" height="250" visible="false" buttons="close">
        <a:vbox anchors="0 0 0 0">
            <a:tab id="tabConsole" skin="lowtab" flex="1">
                <a:page caption="Console">
                    <a:vbox anchors="0 0 0 0">
                        <a:toolbar>
                            <a:bar border="0 0 1 0">
                                <a:button
                                  caption  = "Clear" 
                                  onclick  = "
                                    txtConsole.clear();
                                  " />
                            </a:bar>
                        </a:toolbar>
                        <a:text id="txtConsole"
                          flex       = "1"
                          scrolldown = "true" 
                          textselect = "true"
                          focussable = "true"
                          class      = "apf_console" />
                    </a:vbox>      
                </a:page>
            </a:tab>
            <a:textbox id="txtConsoleInput"
              class     = "topborder"
              onkeydown = "return require('ext/console/console').keydownHandler(event)"
              onkeyup   = "return require('ext/console/console').keyupHandler(event)" />
        </a:vbox>
    </a:window>
</a:application>