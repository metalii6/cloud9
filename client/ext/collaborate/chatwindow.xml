<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:window
      id        = "chatWindow"
      title     = "New Chat"
      center    = "false"
      modal     = "false"
      draggable = "false"
      visible   = "false"
      width     = "260"
      right     = "42"
      skin      = "todowin">
        <a:toolbar>
            <a:bar height="36">
                <a:hbox edge="5">
                </a:hbox>
            </a:bar>
        </a:toolbar>
        <a:panel 
          skin      = "todopanel"
          visible   = "true"
        >
            <a:hbox edge="3 0 3 0">
                <a:text id   = "txtChat"
                  margin     = "3 0 0 0"
                  flex       = "1"
                  scrolldown = "true"
                  textselect = "true"
                  focussable = "true"
                  class      = "chat_text" />
                <a:scrollbar
                  for       = "txtChat"
                  margin    = "0"
                  skin      = "sbcollaborators"
                  width     = "9" />
            </a:hbox>
        </a:panel>
        <a:toolbar class="top_border">
            <a:bar height="27">
                 <a:button
                  icon    = "debugger/monitorexpression_tsk{this.disabled ? '_disabled' : ''}.gif"
                  left    = "0"
                 />
            </a:bar>
        </a:toolbar>
    </a:window>
</a:application>